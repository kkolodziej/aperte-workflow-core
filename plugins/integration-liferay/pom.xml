<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.aperteworkflow</groupId>
    <artifactId>plugins</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>
  
  <artifactId>integration-liferay</artifactId>
  <name>integration-liferay</name>
  <packaging>bundle</packaging>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
	<dependency>
	  <groupId>junit</groupId>
	  <artifactId>junit</artifactId>
	  <version>3.8.1</version>
	  <scope>test</scope>
	</dependency>
	<dependency>
	    <groupId>org.aperteworkflow</groupId>
	    <artifactId>model</artifactId>
	    <version>${aperteworkflow.version}</version>
	    <scope>provided</scope>
	</dependency>
	<dependency>
	    <groupId>org.aperteworkflow</groupId>
	    <artifactId>integration-interface</artifactId>
	    <version>${aperteworkflow.version}</version>
	    <scope>provided</scope>
	</dependency>
	<dependency>
	    <groupId>com.liferay.portal</groupId>
	    <artifactId>portal-service</artifactId>
	    <version>${liferay.version}</version>
	    <scope>provided</scope>
	</dependency>
    <dependency>
           <groupId>javax.servlet</groupId>
           <artifactId>servlet-api</artifactId>
           <version>2.5</version>
           <scope>provided</scope>
       </dependency>
       <dependency>
           <groupId>javax.portlet</groupId>
           <artifactId>portlet-api</artifactId>
           <version>2.0</version>
           <scope>provided</scope>
       </dependency>
  </dependencies>
  
      <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>2.3.7</version>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.aperteworkflow.integration.liferay;version=${project.version},
                            pl.net.bluesoft.rnd.processtool.roles.impl;version=${project.version},
                            pl.net.bluesoft.rnd.processtool.usersource.impl;version=${project.version},
                            pl.net.bluesoft.rnd.processtool.authorization.impl;version=${project.version},
                            org.aperteworkflow.util.ldap,
                            com.liferay.portal,
                            com.liferay.portal.theme,
                            com.liferay.portal.kernel.language,
                            com.liferay.portal.kernel.log
                        </Export-Package>
                        <Import-Package>
                            javax.mail;version=!,
                            javax.servlet.http;resolution:=optional,
                            javax.servlet;resolution:=optional,
                            pl.net.bluesoft.rnd.util.i18n.impl,
                            pl.net.bluesoft.rnd.processtool.roles,
                            pl.net.bluesoft.rnd.processtool.usersource,
                            pl.net.bluesoft.rnd.processtool.model,
                            pl.net.bluesoft.rnd.processtool.authorization,
                            javassist.util.proxy,org.hibernate.proxy,
                            org.osgi.framework,
                            javax.mail.internet;version=!,
                            pl.net.bluesoft.util.eventbus,
                            javax.portlet;resolution:=optional,
                            pl.net.bluesoft.rnd.processtool.di;resolution:=optional,
                            pl.net.bluesoft.rnd.processtool.di.annotations;resolution:=optional
                            pl.net.bluesoft.rnd.processtool.token,
                            pl.net.bluesoft.rnd.processtool.plugins,
                            pl.net.bluesoft.rnd.processtool.plugins.osgi,
                            pl.net.bluesoft.rnd.processtool.roles.impl;version=${project.version},
                            pl.net.bluesoft.rnd.processtool.usersource.impl;version=${project.version},
                            pl.net.bluesoft.rnd.processtool.authorization.impl;version=${project.version},
                            com.liferay.portal;resolution:=optional,
                            com.liferay.portal.theme;resolution:=optional,
                            com.liferay.portal.kernel.language;resolution:=optional,
                            com.liferay.portal.kernel.log;resolution:=optional,
                            com.liferay.portal.kernel.io.unsync;resolution:=optional,
                            com.bea.jvm;resolution:=optional,
                            com.caucho.burlap.client;resolution:=optional,
                            com.caucho.burlap.io;resolution:=optional,
                            com.caucho.burlap.server;resolution:=optional,
                            com.caucho.hessian;resolution:=optional,
                            com.caucho.hessian.client;resolution:=optional,
                            com.caucho.hessian.io;resolution:=optional,
                            com.caucho.hessian.server;resolution:=optional,
                            com.ibm.wsspi.uow;resolution:=optional,
                            com.lowagie.text;resolution:=optional,
                            com.lowagie.text.pdf;resolution:=optional,
                            com.mchange.v2.c3p0;resolution:=optional,
                            com.sun.rowset;resolution:=optional,
                            com.sun.syndication.feed;resolution:=optional,
                            com.sun.syndication.feed.atom;resolution:=optional,
                            com.sun.syndication.feed.rss;resolution:=optional,
                            com.sun.syndication;resolution:=optional,
                            com.sun.syndication.io;resolution:=optional,
                            commonj.timers;resolution:=optional,
                            commonj.work;resolution:=optional,
                            freemarker.cache;resolution:=optional,
                            freemarker.template;resolution:=optional,
                            *
                        </Import-Package>
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Bundle-Activator>org.aperteworkflow.integration.liferay.Activator</Bundle-Activator>
                        <Bundle-SymbolicName>org.aperteworkflow.integration.liferay</Bundle-SymbolicName>
                        <Bundle-Version>0.1</Bundle-Version>
                        <Embed-Directory>lib</Embed-Directory>
                        <Embed-Transitive>true</Embed-Transitive>
                        <ProcessTool-I18N-Property>messages</ProcessTool-I18N-Property>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
	    <!-- Profil dev do automatycznego kopiowania jarow do osgi -->
    <profiles>
    
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
	            <plugins>
		            <plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								<id>copy</id>
								<phase>package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.artifactId}</artifactId>
											<type>jar</type>
											<version>${project.version}</version>
											<overWrite>true</overWrite>
											<outputDirectory>${osgi.dir}</outputDirectory>
											<destFileName>${project.artifactId}-${project.version}.jar</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
